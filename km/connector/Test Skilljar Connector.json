{
  "$id": "skilljar_lessonConnector",
  "$schema": "https://schema.yext.com/config/km/connector/v3",
  "displayName": "Skilljar Lesson Connector",
  "entityType": "skilljar_lesson",
  "source": {
    "sourceConfig": {
      "nativeSourceConfig": {
        "source": "skilljar",
        "operation": "fetchLessons",
        "inputs": {
          "domainName": "${{domainName}}",
          "apiKey": "${{apiKey}}"
          }
        }
    },
    "selectors": [
      {
        "type": "JSON",
        "header": "Entity ID",
        "path": "id"
      },
      {
        "type": "JSON",
        "header": "Name",
        "path": "title"
      },
      {
        "type": "JSON",
        "header": "course.title",
        "path": "course.title"
      },
      {
        "type": "JSON",
        "header": "Rich Text Description",
        "path": "description_html"
      },
      {
        "type": "JSON",
        "header": "Keywords",
        "path": "search_keywords"
      }
    ]
  },
  "mappings": [
    {
      "field": "richTextDescription",
      "header": "Rich Text Description",
      "subfieldPath": []
    },
    {
      "field": "entityId",
      "header": "Entity ID",
      "subfieldPath": []
    },
    {
      "field": "name",
      "header": "Name",
      "subfieldPath": []
    },
    {
      "field": "keywords",
      "header": "Keywords",
      "subfieldPath": []
    }
  ],
  "scheduleConfig": {
    "customSchedule": {
      "timeZone": "America/New_York",
      "startDate": "2022-02-14",
      "startTime": "00:00",
      "frequencyType": "DAILY"
    },
    "runMode": "COMPREHENSIVE"
  }
}
